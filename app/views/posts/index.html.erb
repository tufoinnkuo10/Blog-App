<div>
  <%= render 'users/user', user: @posts.first.user %>
  <ul>
    <% @posts.includes(:user).each do |post| %>
      <%= render 'post', post: post %>
      <%= render 'comment', comments: post.comments %>
    <% end %>
  </ul>
  <div class="all_post">
    <button type="button" class="btn btn-secondary"><%= link_to "Pagination", user_post_path(id: @posts.first.id)%></button>
  </div>
</div>

