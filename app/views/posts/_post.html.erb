<li class="user_posts">
  <div class="post_show_title">
    <h2><%= post.title %> by <%= post.user.name %></h2>
    <h3>
      comments: <%= post.comments_counter || 0 %>,
      <%= render 'likes/like', post: post %> : <%= post.likes.count || 0 %>
    </h3>
  </div>
  <br>
  <p><%= post.text %></p>
</li>
